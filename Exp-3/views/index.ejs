<%- include('partials/header') %>

<a href="/add" class="btn btn-success mb-3">+ Add New Student</a>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Roll Number</th>
      <th>Department</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% students.forEach(student => { %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.rollNumber %></td>
        <td><%= student.department %></td>
        <td>
          <a href="/edit/<%= student._id %>" class="btn btn-warning btn-sm">Edit</a>
          <a href="/delete/<%= student._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete this student?')">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

</div> <!-- closing Bootstrap container -->
</body>
</html>
